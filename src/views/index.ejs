<% include partials/_header %>

<div class="container">

  <div class="row">
    <!--FORM-->
    <div class="col-md-5 mb-5">
      <div class="card">
        
        <div class="card-body">
          <h2 class="mb-4">CRUD de productos</h2>
          <form action="/add" method="post">
            
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre de producto">
            </div>

            <div class="form-group">
              <textarea class="form-control" name="descripcion" cols="80" placeholder="Añade una descripción"></textarea>
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="precio" placeholder="Precio">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="cantidad" placeholder="Cantidad">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="marca" placeholder="Marca">
            </div>

            <button class="btn btn-primary" type="submit">
              Añadir producto
            </button>

          </form>
        </div>
      </div>
    </div>

    

    <!-- LIST -->
    <div class="col-md-12">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N°</th>
            <th>Nombre de producto</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Marca</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= tasks[i].nombre %></strong></td>
              <td><%= tasks[i].descripcion %></td>
              <td><%= tasks[i].precio %></td>
              <td><%= tasks[i].cantidad %></td>
              <td><%= tasks[i].marca %></td>
              <td>
                <a href="/delete/<%= tasks[i]._id %>"
                  class="btn btn-danger">
                  Borrar
                </a>
                <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">
                  Editar
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>

